[user]
  email = mvmjacobs@gmail.com
  name = Marcos Jacobs
[core]
autocrlf = true
[alias]
  st = status
  unstage = reset HEAD --
  bs = checkout -b
  goto = checkout
  discard = checkout
  save = stash save
  view = log --pretty=format:'%C(auto,yellow)%h %C(reset)%ad %C(auto,green)<%aE>%x09%C(reset)%s' --date=format:'%d/%m/%Y %H:%M'
  abort-merge = reset --hard HEAD
  fp = !git fetch --prune --tags && git pull
  load-remitian = !git config --global user.email "marcos.jacobs@remitian.com"
  load-personal = !git config --global user.email "mvmjacobs@gmail.com"
  cb = !git branch | grep -v "release" | grep -v "main" | xargs git branch -D
  changelog = log --pretty=format:'%C(reset)%s ([%C(auto)%h](https://github.com/USERNAME/REPOSITORY/commit/%C(auto)%h))'
